<UserControl x:Class="SmartQB.UI.Views.LibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SmartQB.UI.Views"
             xmlns:vm="clr-namespace:SmartQB.UI.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:LibraryViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="600" d:DesignWidth="900"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar: Tags -->
        <GroupBox Header="Tags" Grid.Column="0" Margin="0,0,10,0">
            <ListBox ItemsSource="{Binding Tags}"
                     SelectedItem="{Binding SelectedTag}"
                     DisplayMemberPath="Name"
                     BorderThickness="0" Background="Transparent"/>
        </GroupBox>

        <!-- Main Content: Search + Questions -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Search Bar -->
            <DockPanel Grid.Row="0" LastChildFill="True" Margin="0,0,0,15">
                <Button Content="Search" DockPanel.Dock="Right"
                        Command="{Binding SearchCommand}"
                        Padding="15,5" Margin="10,0,0,0"/>
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="14" VerticalContentAlignment="Center"
                         Padding="5"/>
            </DockPanel>

            <!-- Loading Indicator -->
            <ProgressBar Grid.Row="1" IsIndeterminate="True" Height="5" VerticalAlignment="Top"
                         Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                         Panel.ZIndex="100"/>

            <!-- Questions List -->
            <ListView Grid.Row="1" ItemsSource="{Binding Questions}"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      BorderThickness="0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" Padding="10" Margin="0,0,0,5">
                            <StackPanel>
                                <DockPanel LastChildFill="False" Margin="0,0,0,5">
                                    <TextBlock Text="{Binding Difficulty, StringFormat=Difficulty: {0:F1}}"
                                               Foreground="Gray" FontSize="12" DockPanel.Dock="Right"/>
                                    <TextBlock Text="{Binding Id, StringFormat=ID: {0}}"
                                               Foreground="Gray" FontSize="12" DockPanel.Dock="Left"/>
                                </DockPanel>

                                <TextBlock Text="{Binding Content}" TextWrapping="Wrap" FontSize="14" Margin="0,0,0,8" MaxHeight="100" TextTrimming="CharacterEllipsis"/>

                                <ItemsControl ItemsSource="{Binding Tags}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#E0E0E0" CornerRadius="3" Padding="5,2" Margin="0,0,5,5">
                                                <TextBlock Text="{Binding Name}" FontSize="11"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Margin" Value="0,2"/>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </Grid>
    </Grid>
</UserControl>
