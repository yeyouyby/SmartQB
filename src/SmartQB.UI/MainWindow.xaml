<Window x:Class="SmartQB.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartQB.UI"
        xmlns:vm="clr-namespace:SmartQB.UI.ViewModels"
        xmlns:views="clr-namespace:SmartQB.UI.Views"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
        mc:Ignorable="d"
        Title="SmartQB" Height="700" Width="1100">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:LibraryViewModel}">
            <views:LibraryView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ImportViewModel}">
            <views:ImportView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#F3F3F3" BorderBrush="#DDD" BorderThickness="0,0,1,0">
            <StackPanel Margin="10">
                <TextBlock Text="SmartQB" FontSize="20" FontWeight="Bold" Margin="10,20,10,30" HorizontalAlignment="Center"/>

                <Button Content="Library" Command="{Binding NavigateToLibraryCommand}"
                        Height="40" Margin="0,0,0,10" FontSize="14"/>

                <Button Content="Import" Command="{Binding NavigateToImportCommand}"
                        Height="40" Margin="0,0,0,10" FontSize="14"/>

                <StackPanel VerticalAlignment="Bottom" Margin="0,50,0,0">
                    <TextBlock Text="Version:" FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding Version}" FontSize="12" Foreground="Gray" HorizontalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentPage}" />
    </Grid>
</Window>
