<Window x:Class="SmartQB.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartQB.UI"
        xmlns:vm="clr-namespace:SmartQB.UI.ViewModels"
        xmlns:views="clr-namespace:SmartQB.UI.Views"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
        mc:Ignorable="d"
        Title="SmartQB" Height="600" Width="900">
    <Grid>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20,0,0">
            <TextBlock Text="SmartQB - Intelligent Question Bank" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                <TextBlock Text="Version: " FontSize="12" Foreground="Gray"/>
                <TextBlock Text="{Binding Version}" FontSize="12" Foreground="Gray"/>
            </StackPanel>
        </StackPanel>

        <views:ImportView DataContext="{Binding ImportVM}" Margin="20,100,20,20"/>
    </Grid>
</Window>
